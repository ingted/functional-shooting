{require_otp_vsn, "R15B"}.

{erl_first_files, ["src/shootingserver"]}.

{erl_opts, [warnings_as_errors,
            warn_export_all,
            warn_unused_import,
            warn_untyped_record,
	    {parse_transform, lager_transform}]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.

{clean_files, ["./test/.beam", ".qc/*", ".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{edoc_opts, [{dialyzer_specs, all}, {report_missing_type, true},
             {report_type_mismatch, true}, {pretty_print, erl_pp},
             {preprocess, true}]}.

{validate_app_module, true}.

{validate_app_modules, true}.

{deps,
   [{cowboy,
    ".*", {git, "git://github.com/extend/cowboy.git", {branch, "master"}}},
    {jiffy,
    ".*", {git, "git://github.com/davisp/jiffy.git", {branch, "master"}}},
    {lager,
    ".*", {git, "git://github.com/basho/lager.git", {branch, "master"}}}
  ]}.

